<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fsu.kevinfriedpig"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:largeHeap="true">
        <activity
            android:name="com.fsu.kevinfriedpig.SplashScreenView"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".LoadingView" 
            android:label="@string/loading_view_title"
            android:screenOrientation="portrait"
            ></activity>
        <activity 
            android:name=".SearchView" 
            android:label="@string/search_view_title"
            android:screenOrientation="portrait"
            ></activity>
        <activity 
            android:name=".ResultView" 
            android:label="@string/result_view_title"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>