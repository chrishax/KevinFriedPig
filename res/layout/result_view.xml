<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background_gradient">

    <ImageButton
        android:id="@+id/imbKfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="KevinClick"
        android:contentDescription="@string/result_view_contdesc"
        android:src="@drawable/baconr" />

    <TextView
        android:id="@+id/tvTrace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imbKfp"
        android:text="@string/result_view_blank"
        android:textColor="@color/gold3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvBaconNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imbKfp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:textColor="@color/gold3"
        android:text="@string/result_view_blank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>