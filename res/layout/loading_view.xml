<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    

    <TextView
        android:id="@+id/tvProgress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pbProgress1"
        android:layout_alignParentLeft="true"
        android:text="@string/load_progress_txt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gold2" />
    
    <ProgressBar
        android:id="@+id/pbProgress1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvProgress2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="37dp" />

    <TextView
        android:id="@+id/tvProgress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pbProgress2"
        android:layout_alignParentLeft="true"
        android:text="@string/load_progress_txt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gold2" />


    <ProgressBar
        android:id="@+id/pbProgress2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvProgress3"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
         />

    <TextView
        android:id="@+id/tvProgress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pbProgress3"
        android:layout_alignParentLeft="true"
        android:text="@string/load_progress_txt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gold2" />
    
    <ProgressBar
        android:id="@+id/pbProgress3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
         />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/load_quote"
        android:gravity="center"
        android:textColor="@color/gold2"
        android:layout_marginTop="12dp"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvProgress1"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/main_graph_desc"
        android:src="@drawable/small_tree_demo" />

</RelativeLayout>