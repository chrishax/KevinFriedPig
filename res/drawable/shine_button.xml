<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/lightBlue1"
                android:endColor="@color/lightBlue2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/gray2"/>
                
            <corners
                android:radius="14dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/gold1"
                android:startColor="@color/gold2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/gold2" />
            <corners
                android:radius="14dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>