<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/tvTrace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imbKfp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/result_view_blank"
        android:textColor="@color/gold3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/imbKfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/result_view_contdesc"
        android:onClick="kevinClick"
        android:src="@drawable/baconr" />

</RelativeLayout>